{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.16.0",
    "npm": ">=10.9.2"
  },
  "scripts": {
    "dev": "wrangler dev",
    "dev:vite": "vite --host --mode development",
    "prod": "cross-env NODE_ENV=production vite --host --mode production",
    "build": "rm -rf dist && vite build --mode development",
    "build:prod": "rm -rf dist && cross-env NODE_ENV=production vite build --mode production",
    "preview": "vite preview",
    "deploy": "bun run build:prod && wrangler deploy",
    "cf:dev": "wrangler dev",
    "cf:deploy": "wrangler deploy",
    "lint": "eslint \"src/**/*.{ts,tsx,md}\" --ext .ts,.tsx",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,md}\" --ext .ts,.tsx --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@tanstack/react-query": "^5.90.12",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-table-of-contents": "^1.1.0",
    "preact": "^10.28.0",
    "preact-iso": "^2.11.0",
    "preact-render-to-string": "^6.6.4",
    "react-helmet-async": "^2.0.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251217.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-preact": "^2.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-preact": "^0.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "sass": "^1.97.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wrangler": "^4.56.0"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}