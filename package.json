{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.16.0",
    "npm": ">=10.9.2"
  },
  "scripts": {
    "dev": "wrangler dev",
    "dev:vite": "vite --host --mode development",
    "prod": "cross-env NODE_ENV=production vite --host --mode production",
    "build": "rm -rf dist && vite build --mode development",
    "build:prod": "rm -rf dist && cross-env NODE_ENV=production vite build --mode production",
    "preview": "vite preview",
    "deploy": "bun run build:prod && wrangler deploy",
    "cf:dev": "wrangler dev",
    "cf:deploy": "wrangler deploy",
    "lint": "eslint \"src/**/*.{ts,tsx,md}\" --ext .ts,.tsx",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,md}\" --ext .ts,.tsx --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@tanstack/react-query": "^5.90.20",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "isomorphic-dompurify": "^3.0.0-rc.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-table-of-contents": "^1.1.0",
    "preact": "^10.28.3",
    "preact-iso": "^2.11.1",
    "preact-render-to-string": "^6.6.5",
    "react-helmet-async": "^2.0.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260207.0",
    "@preact/preset-vite": "^2.10.3",
    "@testing-library/preact": "^3.2.4",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.0",
    "eslint-config-preact": "^2.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-preact": "^0.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "semver": "^7.6.3",
    "undici": "^7.18.2",
    "js-yaml": "^4.1.1",
    "lodash": "^4.17.23"
  }
}
